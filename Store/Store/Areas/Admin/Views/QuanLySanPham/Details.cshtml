@model Entities.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content-header">
    <h1>
        Quản lý sản phẩm
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "TrangChu")"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="@Url.Action("DanhSachSanPham", "QuanLySanPham")">Quản lý sản phẩm</a></li>
        <li class="active">Chi tiết sản phẩm</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Chi tiết sản phẩm</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <dl class="dl-horizontal">

                        <dt>
                            Tên sản phẩm
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TenSP)
                        </dd>
                        <dt>
                            Loại sản phẩm
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LoaiSanPham.TenLoai)
                        </dd>

                        <dt>
                            Nhà cũng cấp
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NhaCungCap.TenNCC)
                        </dd>

                        <dt>
                            Nhà sản xuất
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NhaSanXuat.TenNSX)
                        </dd>


                        <dt>
                            Giá bán
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DonGia)
                        </dd>

                        <dt>
                            Ngày cập nhật
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.NgayCapNhap)
                        </dd>

                        <dt>
                            Cấu hình
                        </dt>

                        <dd>
                            @Html.Raw(Model.CauHinh)
                        </dd>

                        <dt>
                            Mô tả
                        </dt>

                        <dd>
                            @Html.Raw(Model.MoTa)
                        </dd>

                        <dt>
                            Hình ảnh
                        </dt>

                        <dd>
                            <img src="@Url.Content("~/Content/HinhAnhSP/"+Model.HinhAnh)" class="thumbnail" width="100" height="100" />
                        </dd>

                        <dt>
                            Số lượng tồn
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.SoLuongTon)
                        </dd>


                        <dt>
                            Sản phẩm mới
                        </dt>

                        <dd>
                            @if (Model.Moi != 0)
                            {
                                <p>Mới</p>
                            }
                            else
                            {
                                <p>Cũ</p>
                            }

                        </dd>

                        <dt>
                            Tình trạng
                        </dt>

                        <dd>
                            @if (Model.DaXoa == true)
                            {
                                <p>Ngừng bán</p>
                            }
                            else
                            {
                                <p>Đang bán</p>
                            }
                        </dd>
                        @if (Model.HinhAnh1 != null)
                        {

                            <dt>
                                Hình ảnh 1
                            </dt>

                            <dd>

                                <img src="@Url.Content("~/Content/HinhAnhSP/"+Model.HinhAnh1)" class="thumbnail" width="100" height="100" />

                            </dd>
                        }
                        @if (Model.HinhAnh1 != null)
                        {
                            <dt>
                                Hình ảnh 2
                            </dt>

                            <dd>
                                <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh2)" class="thumbnail" width="100" height="100" />
                            </dd>
                        }
                        @if (Model.HinhAnh1 != null)
                        {
                            <dt>
                                Hình ảnh 3
                            </dt>

                            <dd>
                                <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh3)" class="thumbnail" width="100" height="100" />
                            </dd>
                        }
                        @if (Model.HinhAnh1 != null)
                        {
                            <dt>
                                Hình ảnh 4
                            </dt>

                            <dd>
                                <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh4)" class="thumbnail" width="100" height="100" />
                            </dd>
                        }
                    </dl>
                    <a href="@Url.Action("DanhSachSanPham","QuanLySanPham")" class="btn btn-info">Quay lại</a>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


