@model IEnumerable<Entities.SanPham>

<div class=" h_menu4">
    <ul class="memenu skyblue">
        <li class="active grid"><a class="color8" href="@Url.Action("Index","Home")">Trang chủ</a></li>
        @foreach (var groupItem in Model.GroupBy(x => x.LoaiSanPham))
        {

            if (groupItem.Key != null)
            {
                <li class="grid">
                    <a class="color2" href="@Url.Action("SanPham","SanPham",new { @maLoaiSP=groupItem.Key.MaLoaiSP  })">@groupItem.Key.TenLoai</a>
                    <div class="mepanel">
                        <div class="row">
                            @foreach (var groupItem1 in Model.GroupBy(x => x.LoaiSanPham))
                            {
                                if (groupItem1.Key != null)
                                {
                                    <div class="col1">
                                        <div class="h_nav">
                                            <h4>@groupItem1.Key.TenLoai</h4>
                                            <ul>
                                                @foreach (var item in groupItem1.GroupBy(x => x.NhaSanXuat))
                                                {
                                                    if (item.Key != null)
                                                    {
                                                        <li><a href="@Url.Action("SanPham","SanPham",new { @maNSX= item.Key.MaNSX,@maLoaiSP=groupItem.Key.MaLoaiSP  })">@item.Key.TenNSX</a></li>
                                                    }
                                                }

                                            </ul>
                                        </div>
                                    </div>
                                }
                            }


                        </div>
                    </div>
                </li>
            }
        }
        <li><a class="color6" href="#">Liên hệ</a></li>
    </ul>
</div>

